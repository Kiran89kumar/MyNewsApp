<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/txt_storycontext"
        style="@style/TextContext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="NEWS"
        android:textAllCaps="true"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_timeago"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1h ago"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_storycontext" />

    <ImageView
        android:id="@+id/img_news"
        android:layout_width="100dp"
        android:layout_height="76dp"
        android:scaleType="centerCrop"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_storycontext"
        app:layout_constraintLeft_toLeftOf="@+id/txt_storycontext" />

    <TextView
        android:id="@+id/txt_heading"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="top|start"
        android:lineSpacingExtra="2dp"
        android:maxLines="3"
        tools:ignore="RtlHardcoded"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toTopOf="@+id/img_news"
        app:layout_constraintBottom_toBottomOf="@+id/img_news"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/img_news"
        android:layout_marginLeft="8dp"
        tools:text="askjdnbkajsd ans djkas djkas das md asd jaksn djknas djkas djkas djnas jdn asjd asjkd jask djkas djasnjks dcfjkas fa sdmf ajfdasfdaf"
        app:layout_constraintRight_toRightOf="@+id/txt_timeago" />

    <TextView
        android:id="@+id/txt_details"
        style="@style/TextDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="2dp"
        app:layout_constraintTop_toBottomOf="@+id/img_news"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/img_news"
        app:layout_constraintRight_toRightOf="@+id/txt_heading"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>

